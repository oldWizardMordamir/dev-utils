{
  "compilerOptions": {
    "baseUrl": "./dist",
    "module": "commonjs",
    "target": "es2018",
    "rootDir": "lib",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2015", "ES2018", "es2021"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["lib/index.ts"],
  "exclude": ["**/node_modules", "dist"]
}
